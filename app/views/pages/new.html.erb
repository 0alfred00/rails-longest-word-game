<div class="container">
  <h1 class="display-4">Hello, let's play a game:</h1>
  <p><%= @letters.join(" ") %></p>
  <form action="score" method="post" data-turbo="false">
    <div class="mb-3">
      <input type="text" name="attempt" class="form-control">
      <input type="submit" value="Submit attempt!" class="btn btn-primary">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </div>
  </form>
</div>
